set ignorecase
set smartcase
set relativenumber 
set number
set hlsearch
set incsearch
set cursorline
set clipboard=unnamed
set scrolloff=15

nnoremap <leader>sa ggVG<CR>
nnoremap <leader>o o<Esc>
nnoremap <leader>O O<Esc>
nnoremap <Esc> :nohlsearch<CR>

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

nnoremap k n
nnoremap K N
nnoremap n j
nnoremap N J
nnoremap e k
nnoremap E K
nnoremap j e
nnoremap J E 

xnoremap k n
xnoremap K N
xnoremap n j
xnoremap N J
xnoremap e k
xnoremap E K
xnoremap j e
xnoremap J e

